<%- include('partials/header.ejs'); -%>


<h2 class="monospace mt-5 mb-4"><b>Book Status</b></h2>


<div class="row">
    <h4 class="monospace">reading</h4>
    <% listReading.forEach(book => { %>
        <div class="col-1 mb-4  "> <!-- Adjust column width for more space -->
        <a href="/thisBook/<%= encodeURIComponent(book.book_id) %>" style="text-decoration: none;">
            <img src="<%= book.bookcoverurl %>" alt="Cover" class="img-cover">
        </a>
        </div>
    <% }) %>
</div>

<div class="row">
    <h4 class="monospace">on hold</h4>
    <% listOnHold.forEach(book => { %>
        <div class="col-1 mb-4 "> <!-- Adjust column width for more space -->
        <a href="/thisBook/<%= encodeURIComponent(book.book_id) %>" style="text-decoration: none;">
            <img src="<%= book.bookcoverurl %>" alt="Cover" class="img-cover">
        </a>
        </div>
    <% }) %>
</div>


<div class="row">
    <h4 class="monospace">completed</h4>
    <% listCompleted.forEach(book => { %>
        <div class="col-1 mb-4 "> <!-- Adjust column width for more space -->
            <a href="/thisBook/<%= encodeURIComponent(book.book_id) %>" style="text-decoration: none;">
                <img src="<%= book.bookcoverurl %>" alt="Cover" class="img-cover">
            </a>          
        </div>
    <% }) %>
</div>


<div class="row">
    <h4 class="monospace">dropped</h4>
    <% listDropped.forEach(book => { %>
        <div class="col-1 mb-4 "> <!-- Adjust column width for more space -->
            <a href="/thisBook/<%= encodeURIComponent(book.book_id) %>" style="text-decoration: none;">
                <img src="<%= book.bookcoverurl %>" alt="Cover" class="img-cover">
            </a>        </div>
    <% }) %>
</div>

<%- include('partials/footer.ejs'); -%>

<style>
    .img-cover {
        width: 100px;
        height: 150px;
        object-fit: cover; /* Prevents image distortion */
        transition: transform 0.3s ease, box-shadow 0.3s ease; /* Smooth transition for scaling and shadow */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.5); /* Initial shadow */
    }
    
    .img-cover:hover {
        transform: scale(1.3); /* Increase size by 10% on hover */
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.7); /* Larger shadow on hover */
    }
    


   
    .row {
        margin-right: -15px; /* Adjust for the grid gutter */
        margin-left: -15px;
    }
    .col-md-2 {
        padding-left: 10px; /* Adjust horizontal spacing */
        padding-right: 10px;
    }
    
</style>
